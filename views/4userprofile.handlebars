<form action="/user-profile" method="POST" id="form-user-profile-page" enctype="multipart/form-data">
    <input type="text" name="ageValue" placeholder="Age">
    <input type="text" name="cityValue" placeholder="City">
    <input type="text" name="homepageValue" placeholder="Your website">
    <input type="file" id="photo" name="myphoto" accept="image/png, image/jpeg" >
    <select id="country" name="country" class="form-control">
        {{#each countries}}
            <option value="{{code}}">{{name}}</option>
        {{/each}}
    </select>
    <button type="submit" href="/signature"> <b> Submit</b></button>
</form>

