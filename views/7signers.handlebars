{{!-- insert link in handlebars file for the name if the person has a homepage
insert link in handlebars file for the city if the person has provided a city --}}
<ol>
    {{#each allDataRows}}
    <li id="lines-signers-page">
        {{#if homepage}}
        <a href="{{homepage}}" target="_blank" id="links-signers-page"> {{ first}} {{last}}</a> {{age}}
        {{else}}
        {{ first}} {{last}} {{age}}
        {{/if}}

        {{#if city}} {{! -- query to check if user_profiles table consists of the city value for this current user_id--}}
        <a href="/signers/{{city}}" id="cities-signers-page">{{city}}</a> 
        {{else}}
        {{city}}
        {{/if}}
    </li>
    {{/each}}
</ol>


